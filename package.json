{
  "name": "crypto-tracker",
  "version": "0.0.0",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron": "npm run electron:compile && electron . --dev",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:4200 && npm run electron\"",
    "electron:build": "ng build --configuration production && npm run electron:compile && electron-builder",
    "electron:build:win": "ng build --configuration production && npm run electron:compile && electron-builder --win",
    "electron:build:mac": "ng build --configuration production && npm run electron:compile && electron-builder --mac",
    "electron:build:linux": "ng build --configuration production && npm run electron:compile && electron-builder --linux"
  },
  "build": {
    "appId": "com.cryptotracker.app",
    "productName": "Crypto Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "src/assets/icon.png"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "axios": "^1.13.2",
    "ccxt": "^4.5.22",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.3"
  }
}
